<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mAlertButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mStopButton"
        android:layout_marginTop="20dp"
        android:elevation="16dp"
        android:onClick="setAlarm"
        android:text="@string/alert_in_5_secs" />

    <Button
        android:id="@+id/mStopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mShowButton"
        android:layout_marginTop="20dp"
        android:elevation="16dp"
        android:text="@string/stop_notification"
        android:onClick="stopNotification"/>

    <Button
        android:id="@+id/mShowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:elevation="16dp"
        android:text="@string/show_notification"
        android:onClick="showNotificationWithTaskStackSupport" />
</RelativeLayout>